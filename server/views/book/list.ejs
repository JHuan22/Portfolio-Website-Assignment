<% include ../partials/header.ejs %>

<!--Main Nav Navigation-->
<% include ../partials/main_nav.ejs %>

<main class="container">
  <div class="row">
    <div class="col-md-offset-3 col md-8">
      <h1>Business Contacts</h1>
      <%if(typeof displayName =='string'&&displayName){%>
      <a href="/bookList/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add a Contact</a>
      <%}%>
      <br>
      <table class="table table-bordered table-striped table-hover">
        <!--Header Row-->
        <tr>
          <th class="text-context col-2">Name</th>
          <th class="text-context col-2">Business</th>
          <th class="text-context col-1">Age</th>
          <th class="col-4">Description Service</th>
          <th class="text-context col-1">Price for Service</th>
          <%if(typeof displayName =='string'&&displayName){%>
          <th class="text-context col-1"></th>
          <th class="text-context col-1"></th>
          <%}%>
        </tr>
        <% bookList.forEach((book) => { %>
          <tr>
            <td class="text-center col-2"><%= book.name %></td>
            <td class="text-center col-2"><%= book.author %></td>
            <td class="text-center col-1"><%= book.published %></td>
            <td class="col-4"><%= book.description %></td>
            <%if(typeof displayName =='string'&&displayName){%>
            <td class="text-center col-1"><%= book.price %></td>
            <td class="text-center col-1"><a href="/bookList/edit/<%= book._id %>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
            <td class="text-center col-1"><a href="/bookList/delete/<%= book._id %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>
            <%}%>
          </tr>
          <% }); %>
      </table>
    </div>
  </div>
  <hr class="my-4">
</main>

<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>

  <!--Script section -->